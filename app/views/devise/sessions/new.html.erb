<div class="container">
  <div class="main-login-page">
      <div class="big-box">

        <!-- Div for the logo and text info-->
        <div class="text-holder">
            <div class="logo">
              <h1>Fly Me Now</h1>
            </div>

            <div class="slogan">
              <h3>our slogan is going to be here</h3>
            </div>

        </div>


      <!-- Form info div -->
        <div class="form-info">
        <h2>Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        pattern: '[^@]+@[^@]+\.[a-zA-Z]{2,6}',
                        placeholder: "Email",
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions btn btn-light mb-3">
            <%= f.button :submit, "Log In" %>
          </div>
        <% end %>

          <%= render "devise/shared/links" %>
        </div>



      </div>
  </div>
</div>
